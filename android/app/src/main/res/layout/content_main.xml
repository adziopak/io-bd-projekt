<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.gloxiak.menu.MainActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/button2"
                android:background="@drawable/p"
                android:elevation="0dp"
                android:text="Budynek P"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="338dp"
                android:layout_height="160dp"
                android:background="@drawable/v"
                android:elevation="0dp"
                android:text="Budynek V"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/button3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="23dp"
                android:background="@drawable/s"
                android:elevation="0dp"
                android:text="Budynek S"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/button1"
                android:layout_alignTop="@+id/button3"
                android:background="@drawable/h"
                android:elevation="0dp"
                android:text="Budynek H"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/button5"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/j"
                android:elevation="0dp"
                android:text="Budynek J"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_below="@+id/button6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/k"
                android:elevation="0dp"
                android:text="Budynek K"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_alignBaseline="@+id/button7"
                android:layout_alignBottom="@+id/button7"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button7"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/l"
                android:elevation="0dp"
                android:text="Budynek L"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_below="@+id/button4"
                android:layout_alignStart="@+id/button4"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
